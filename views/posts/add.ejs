<%- include ('../partials/header.ejs')%>
<%- include ('../partials/navbar.ejs')%>
<h3>Add mood to board</h3>
<div class="row center">
    <form action="/post" method="POST" class="col 12">

        <div class="row">
            <div class="input-feild">
                <input type="text" id="text" name="mood">
                <label for="mood">Mood</label>
            </div>
        </div>

        <div class="row">
            <div class="input-feild">
                <input type="text" id="text" name="song">
                <label for="song">Song</label>
            </div>
        </div>

        <div class="row">
            <div class="input-feild">
                <h5>tell them your thoughts</h5>
                <textarea name="body" id="body" cols="30" rows="10"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="input-feild">
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
        <input type="submit" class="btn" value="add post">
        <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>

<%- include ('../partials/footer.ejs')%>